<div class="main">
  <div class="inner">
    <h1><%= @task.title %></h1>
    <p><%= @task.details %></p>
    <div class="completion" >
      <% if @task.completed == true %>
      <i class="far fa-check-square"></i><p>completed</p>
      <% else %>
      <i class="far fa-square"></i><p>Not completed</p>
      <% end %>
    </div>
    <%= link_to "See all tasks", tasks_path %>
    <br>
    <%= link_to "Edit task", edit_task_path %>
    <br>
    <%= link_to "Delete task", delete_task_path(@task), method: :delete, data: {confirm: "Are your sure?"} %>

  </div>
</div>
